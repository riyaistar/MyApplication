<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="colorAccent">@color/theme_color</item>
    </style>
    <style name="expandedappbar" parent="@android:style/TextAppearance.Medium"> //Change Medium to Small
        <item name="android:textSize">30dp</item>  <!--Or Change the font size -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="collapsedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
